# Configuración de logging
logging:
  log_file: "logs/app.log"
  log_level: "INFO"

# Configuración del servicio OCR (documentai o easyocr)
ocr_service: 'documentai'  # Valores posibles: 'documentai', 'easyocr'

# Configuración del modelo local
local_model:
  use: false  # Usar modelo local (true/false)
  model_name: "local_model_name"  # Nombre del modelo local a utilizar

# Configuración de API externa para extracción de información
external_api:
  use: true  # Usar API externa para extracción de información (true/false)
  service: "external_service"  # Servicio de API externa (ej. 'groq')
  model_name: "external_model_name"  # Nombre del modelo de la API externa
  api_key: "api_key_value"  # Clave de API para autenticación

# Configuración de Google Document AI (para OCR)
google_document_ai:
  project_id: "project_id_value"  # ID del proyecto de Google Cloud
  location: "location_value"  # Ubicación del procesador de Document AI
  processor_id: "processor_id_value"  # ID del procesador de Document AI
  credentials_path: "credentials.json"  # Ruta al archivo de credenciales JSON

# Configuración del bot de Telegram (actualizado para Telethon)
telegram_bot:
  use: true  # Usar bot de Telegram para notificaciones (true/false)
  api_id: "your_api_id_here"  # API ID obtenido de https://my.telegram.org/apps
  api_hash: "your_api_hash_here"  # API Hash obtenido de https://my.telegram.org/apps
  phone: "your_phone_number_here"  # Número de teléfono asociado a tu cuenta de Telegram
  session_file: "session/telethon_session"  # Nombre del archivo de sesión de Telethon
  offset_path: "offset.json"
  max_posters_per_day: 50
  start_date: null  # Puede ser null si no se especifica. el formato es "YYYY-MM-DD"
  channel_ids:
    - -1001234567890
    - -1009876543210

# Configuración de la API de Gancio
gancio_api:
  url: https://des.convoca.la/api/event"
  token: null  # Clave de API opcional, puede ser null si no se requiere

# Configuración de la API de OpenCage
opencage_api:
  key: "your_opencage_api_key_here"

# Event tracker
event_tracker_db_path: "sqlite_db/event_tracker.db"

# Configuración de SMTP
smtp:
  host: ""
  port: 587
  user: ""
  password: ""
  from: ""
  to: ""

# Configuración de rutas de directorios
directories:
  images: "./images"
  ics: "./ics"
  download_tracker: "./download_tracker"
  plain_texts: "./plain_texts"